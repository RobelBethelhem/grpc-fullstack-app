{
    "name": "grpc-backend/php-server",
    "description": "PHP 7.3 gRPC Server using Spiral gRPC",
    "type": "project",
    "require": {
        "php": ">=7.3",
        "spiral/php-grpc": "^1.4.0",
        "spiral/roadrunner": "^1.8.0",
        "google/protobuf": "^3.21.0",
        "ext-grpc": "*",
        "ext-protobuf": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "analyze": "phpstan analyze src",
        "generate-grpc": "./generate_grpc.sh"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}